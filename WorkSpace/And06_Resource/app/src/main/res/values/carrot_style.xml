<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="values_circle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_circle</item>
    </style>

    <style name="values_img_style">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="values_line_style">
        <item name="android:background">#e1e1e1</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="values_main_menu">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#111</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="values_menu_img">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">0.1</item>
    </style>

    <style name="values_sub_menu">
        <item name="android:layout_weight">0.9</item>
        <item name="android:textColor">#111</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>