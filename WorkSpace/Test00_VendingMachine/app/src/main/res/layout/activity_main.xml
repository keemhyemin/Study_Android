<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="자판기 프로그램"
        android:textAlignment="center"
        android:textColor="#707070"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout style="@style/linear_style">

        <LinearLayout
            style="@style/sub_linear_style">

            <ImageView
                android:id="@+id/img_cola"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:src="@drawable/cola" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콜라 800원" />

            <TextView
                android:id="@+id/tv_cola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문하기" />

        </LinearLayout>

        <LinearLayout
            style="@style/sub_linear_style">

            <ImageView
                android:id="@+id/img_cider"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:layout_toRightOf="@id/img_cola"
                android:src="@drawable/cider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사이다 800원" />

            <TextView
                android:id="@+id/tv_cider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문하기" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/linear_style">

        <LinearLayout
            style="@style/sub_linear_style">

            <ImageView
                android:id="@+id/fanta"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:src="@drawable/fanta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="환타 700원" />


            <TextView
                android:id="@+id/tv_fanta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_fanta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문하기" />
        </LinearLayout>

        <LinearLayout
            style="@style/sub_linear_style">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:layout_toRightOf="@id/fanta"
                android:src="@drawable/soda" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데미소다 700원" />

            <TextView
                android:id="@+id/tv_soda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_soda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문하기" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">

        <EditText
            android:id="@+id/edt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.8"
            android:hint=" 금액을 입력하세요." />

        <Button
            android:id="@+id/btn_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.2"
            android:text="금액 입력" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#707070" />

    <Button
        android:id="@+id/btn_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:text="잔돈 반환" />

</LinearLayout>